    <script>
    
    function deleteContact(currentPage,cid){
    	swal({
    		  title: "Are you sure?",
    		  text: "Do you want to delete this contact ?",
    		  icon: "warning",
    		  buttons: true,
    		  dangerMode: true,
    		})
    		.then((willDelete) => {
    		  if (willDelete) {
    			window.location="/user/"+currentPage+"/delete-contact/"+cid ;
    			swal({
    			  text: "Do you want to delete this contact ?",
    	         icon: "success",
    			})
    		  } else {
    		    swal("Your imaginary file is safe!");
    		  }
    		});
    }
    
    </script>
  
